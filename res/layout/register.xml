<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
           	android:background="@drawable/input"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
             
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/person" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp" />
            
            <EditText
                android:id="@+id/regId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:textCursorDrawable="@null"
                android:layout_marginLeft="5dp"
                android:hint="请输入注册账号"
                android:inputType="textVisiblePassword"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
           	android:background="@drawable/input"
           	android1:layout_marginTop="10dp"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
             
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/aboutus" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp" />
            
            <EditText
                android:id="@+id/regname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:textCursorDrawable="@null"
                android:layout_marginLeft="5dp"
                android:hint="请输入昵称"
                android:inputType="textCapCharacters"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
           	android:background="@drawable/input"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="20dp"
                android:layout_height="30dp"
             
                android:layout_marginLeft="15dp"
                android1:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/drop" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/regpwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
           	android:background="@drawable/input"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="20dp"
                android:layout_height="30dp"
             	
                android:layout_marginLeft="15dp"
                android1:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/lock" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/regspwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:ems="10"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:textSize="8pt" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="45dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           	android:background="@drawable/input"
            android:layout_weight="1" >
			
            <ImageView
                android:id="@+id/textView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
             
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/code" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />
            
            <EditText
                android:id="@+id/regcode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:ems="10"
                android:hint="请输入验证码"
                android:inputType="textVisiblePassword"
                android:textSize="8pt" >
                
            </EditText>

        </LinearLayout>

        <ImageView
            android:id="@+id/reg_code"
            android:layout_width="180dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/input"
           	/>

    </LinearLayout>

    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="45dp" >

            <Button
                android:id="@+id/reg_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android1:textColor="#FFFFFF"
                android:background="@drawable/input"
                android:text="@string/text_cancel" />

            <Button
                android:id="@+id/reg_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/input"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="@string/text_sub" />

        </LinearLayout>
    
        
    </LinearLayout>
    
    

</RelativeLayout>